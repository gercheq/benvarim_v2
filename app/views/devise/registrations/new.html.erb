<div class="one-column">

  <h1>BenVarım'a kaydolmak çok kolay!</h1>

  <div class="widget widget-light" id="w-yeni-kayit">
    <div class="w-inner">

      <div class="signup-options" id="signup-with-fb">
        <div class="line">
          <div class="size1of2">
            <!-- TODO(yigit): Replace the image below with facepile on production
              <img src="/stylesheets/images/facepile.png" />
            -->

            <div id="fb-root"></div>
            <script>(function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) {return;}
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
              fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));</script>

            <div class="fb-like-box" data-href="http://www.facebook.com/benvarim.platformu" data-width="300" data-show-faces="true" data-border-color="#EEE" data-stream="false" data-header="false"></div>


            <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=116309391796241&amp;xfbml=1"></script><fb:signup-button show-faces="true" width="300" max-rows="2"></fb:signup-button>
          </div>
          <div class="size1of2 lastUnit">
            <!-- <%=link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook, :state => "popup"), :class => "popup", :"data-width" => 600, :"data-height" => 400 =%> -->

            <a class="fb-button" href="<%=user_omniauth_authorize_path(:facebook)%>" data-redirect_uri="https://benvarim.com/authenticate">
            	<span class="fb-button-left"></span>
            	<span class="fb-button-center"><strong>Facebook</strong> ile <strong>Kaydol</strong></span>
            	<span class="fb-button-right"></span>
            </a>
          </div>
        </div>
      </div><!-- signup-options -->

      <div class="signup-separator"><span>ya da</span></div>

      <div class="signup-options" id="signup-with-email">
        <div class="signup-toggle toggle">
          <p>BenVarım'a <a href="#">email ile  giriş</a> yapabilirsin.</p>
        </div>
        <div class="signup-form">
          <% if resource.errors.any? %>
            <div class="msg msg-error" id="error_explanation">
              <h2>Lütfen aşağıdaki hataları düzeltiniz.</h2>
              <ul>
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password %>
            </div>

            <div class="field hidden">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation %>
            </div>

            <div class="actions">
              <%= f.submit "Kaydol", :class=>"button large yellow button-primary" %>
            </div>
          <% end %>
        </div><!-- signup-form -->
      </div><!-- signup-options -->


    </div>
  </div> <!-- .widget -->

  <div class="widget widget-light" id="w-login-link">
    <div class="w-inner">
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div><!-- .one-column -->
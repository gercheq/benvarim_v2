<div class="widget widget-light widget-form" id="w-giris">
  <div class="w-inner">
    <div class="w-title">Kullanıcı Girişi</div>

    <%=render :partial => 'layouts/errors'%>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field field-forgot-pwd">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
        <%= link_to "Şifrenizi mi unuttunuz?", new_password_path(resource_name) %>
      <% end -%>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field field-checkbox clearfix">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

       <div class="actions">
        <%= f.submit :"Giriş", :class=>"button super yellow button-primary" %>
        <% if params[:fb] %>
          <%= link_to "FB Login", user_omniauth_authorize_path(:facebook) %>
        <% end %>
      </div>



    <% end %>

    <%= render :partial => "devise/shared/links" %>

  </div>
</div>
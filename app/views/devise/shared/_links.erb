<div class="form-links">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Daha önce kayıt yaptıysanız, lütfen giriş yapınız.", new_session_path(resource_name) %>
  <% end -%>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Yeni Kayıt Oluştur", new_user_registration_path %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to "Şifrenizi mi unuttunuz?", new_password_path(resource_name) %>
  <% end -%>
</div>
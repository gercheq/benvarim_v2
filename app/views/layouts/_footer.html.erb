            <div class="line">
              <div class="f-twitter size1of2">

                <script src="http://widgets.twimg.com/j/2/widget.js"></script>
                <script>
                new TWTR.Widget({
                  version: 2,
                  type: 'profile',
                  rpp: 6,
                  interval: 5000,
                  width: 210,
                  height: 207,
                  theme: {
                    shell: {
                      background: '#adcff4',
                      color: '#0862a2'
                    },
                    tweets: {
                      background: '#cde5ff',
                      color: '#444444',
                      links: '#0862a2'
                    }
                  },
                  features: {
                    scrollbar: false,
                    loop: false,
                    live: true,
                    hashtags: true,
                    timestamp: true,
                    avatars: false,
                    behavior: 'default'
                  }
                }).render().setUser('Ben_Varim').start();
                </script>

              </div>
              <div class="f-facebook size1of2 lastUnit">
                <div id="fb-root"></div>
                <script>(function(d, s, id) {
                  var js, fjs = d.getElementsByTagName(s)[0];
                  if (d.getElementById(id)) {return;}
                  js = d.createElement(s); js.id = id;
                  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
                  fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));</script>

                <div class="fb-like-box" data-href="http://www.facebook.com/benvarim.platformu" data-width="210" data-show-faces="true" data-border-color="#FFF" data-stream="false" data-header="false"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



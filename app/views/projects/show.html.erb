<%=render :partial => 'layouts/errors'%>

<% @bodyid = "page-proje" %>

<div class="widget widget-light widget-kurum ">
  <div class="w-inner clearfix">
    <div class="w-content">
      <div class="fullcontent-left">
        <% if @project.logo.file? %>
          <%= image_tag @project.logo.url(:thumb) %>
        <% else %>
          <%= image_tag @project.organization.logo.url(:thumb) %>
        <% end %>

        <div class="pb-action">
          <% if @project.can_be_donated? %>
            <%=link_to "Destekle", donate_popup_for_project_path(@project), :class => "yellow button super no-margin", :rel => "facebox"%>
          <% end %>


          <% if user_signed_in? && current_user == @project.organization.user%>
          <div class="admin-actions">
            <ul>
              <li><%= link_to 'DÃ¼zenle', edit_project_path(@project) %></li>
              <li><%=link_to "Yeni Proje Ekle", new_project_for_organization_path(@project)%></li>
            </ul>
          </div>
          <% end %>


        </div>
      </div>
      <div class="fullcontent-right">
        <h1><%= @project.name %></h1>
        <h6><%= link_to @project.organization.name, @project.organization %></h6>

        <% if @project.organization.website %>
          <p class="outlink">
            <%=link_to "Web Sitesi", "http://#{@project.organization.website}", :target => "_blank"%>
          </p>
        <% end %>


        <div class="fcr-desc truncate-short">
          <%= raw @project.description %>
        </div>
      </div>
    </div>
  </div>
</div><!-- end of .widget -->









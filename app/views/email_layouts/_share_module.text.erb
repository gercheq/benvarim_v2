<% if defined?(page) && page != nil%>
<%=page.title%>
 | <%=render :partial => "layouts/like_link",
      :locals => {
        :url => page_path(page, :only_path => false),
        :text => "Facebook'ta Paylaş"
      }%>
 |  <%=render :partial => "layouts/tweet_link",
      :locals => {
        :url => page_path(page, :only_path => false),
        :text => "Twitter'da Paylaş",
        :tweet_text => page.title
      }%>
<% end %>


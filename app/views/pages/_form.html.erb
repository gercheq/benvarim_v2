<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :organization_id %><br />
    <% if @page.new_record? %>
      <%= f.select :organization_id, @organizations, {:include_blank => true} %>
    <% else %>
      <%=@page.organization.name%>
    <% end %>

  </div>
  <div class="field">
    <%= f.label :project_id %><br />
    <% if @page.new_record? %>
      <%= f.select :project_id, @projects, {:include_blank => true}%>
    <% else %>
      <%=@page.project.name%>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description_html, :class => :mceEditor %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :goal %><br />
    <%= f.text_field :goal %>
  </div>
  <div class="actions">
    <%= f.submit "Yarat" %>
  </div>
<% end %>

<%add_page_specific_script "partial/page_form.js"%>


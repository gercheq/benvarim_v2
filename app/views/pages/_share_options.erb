<div id="fb-root"></div>



<div class="share-options">
  <h3>Paylaşarak Destek Ol!</h3>
  <ul class="clearfix rc-bottom">


    <li>
      <div class="fb-like" data-send="true" data-layout="box_count" data-show-faces="true"></div>
    </li>


    <li>
      <a href="http://twitter.com/share?via=ben_varim"
         class="twitter-share-button"
         data-count="vertical"
         data-text="<% if defined? text %><%= text %><% else %><%= @page.title %><% end %>">Tweetle</a>
    </li>



    <li>
      <!-- Place this tag where you want the +1 button to render -->
      <g:plusone size="tall"></g:plusone>

    </li>


    <li>
      <span  class='st_email_vcount' displayText='Email'></span>
    </li>

    <li>
      <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
      <script type="IN/Share"  data-counter="top" data-title="Paylaş"></script>
    </li>

    <li>
      <!-- Place this tag where you want the su badge to render -->
      <su:badge layout="5"></su:badge>

      <!-- Place this snippet wherever appropriate -->
      <script type="text/javascript">
        (function() {
          var li = document.createElement('script'); li.type = 'text/javascript'; li.async = true;
          li.src = 'https://platform.stumbleupon.com/1/widgets.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(li, s);
        })();
      </script>
    </li>
  </ul>
</div>
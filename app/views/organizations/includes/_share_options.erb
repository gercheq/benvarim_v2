<div id="fb-root"></div>

<% if(defined? text && text)
    share_msg = text
  else
    share_msg = @page.title
  end %>

<ul class="clearfix rc-bottom list-share">


  <li>
    <div class="fb-like"
         data-send="true"
         data-show-faces="false"
         data-layout="standard"
         <% if defined? url %>
            data-href="<%=url%>"
         <% end %>
    ></div>
  </li>


  <li>
    <a href="http://twitter.com/share"
       class="twitter-share-button"
       <% if defined? url%>
        data-url="<%=url%>"
        data-count="none"
       <% else %>
        data-count="vertical"
       <% end %>
       data-lang="tr"
       data-related="ben_varim"
       data-hashtags="benvarim"
       data-text="<%= share_msg %>">Tweetle</a>
  </li>


  <li>
    <!-- Place this tag where you want the +1 button to render -->
    <g:plusone
               data-annotation="none"
               <% if defined? url %>
                  data-href="<%=url%>"
               <% end %>
    ></g:plusone>
  </li>


  <li>
    <span class='st_email_hcount'
          displayText='Email ile PaylaÅŸ'
          <% if defined? url %>
            st_url="<%= url %>"
          <% end %>
          st_title="<%= share_msg %>"
    ></span>
  </li>


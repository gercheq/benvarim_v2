<div id="fb-root"></div>


  <ul class="clearfix rc-bottom">


    <li>
      <div class="fb-like" data-send="true"
      data-show-faces="true"
      <% if defined? url %>
        data-href="<%=url%>"
        data-layout="standard"
      <% else %>
        data-layout="box_count"
      <% end %>

      ></div>
    </li>


    <li>
      <a href="http://twitter.com/share"
         class="twitter-share-button"
         <% if defined? url%>
          data-url="<%=url%>"
          data-count="none"
         <% else %>
          data-count="vertical"
         <% end %>
         data-lang="tr"
         data-related="ben_varim"
         data-hashtags="benvarim"
         data-text="<% if(defined? text && text) %><%= text %><% else %><%= @page.title %><% end %>">Tweetle</a>
    </li>



    <li>
      <!-- Place this tag where you want the +1 button to render -->
      <g:plusone size="tall"
      <% if defined? url%>
        data-href="<%=url%>"
        data-annotation="none"
      <% else %>
        data-annotation="bubble"
      <% end %>
      ></g:plusone>

    </li>


    <li>
      <span  class='st_email_vcount' displayText='Email'></span>
    </li>


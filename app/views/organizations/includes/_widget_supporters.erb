<% if BvFeature.is_support_enabled? %>


  <div class="w-supporters">


    <% if @support %>
      <%=link_to "destekci sayini arttir", "javascript:openSupportDialog();", :class => "button green large button-destekle"%>
    <% else%>
        <%=link_to "Destekle", new_support_path(@organization), :class => "button green large button-destekle"%>
    <% end %>

      <div class="w-content">
        <div class="supporters">
          <% if @organization.supports.length != 0 %>
            <p><strong>Destekleyenler:</strong> <%= @organization.supports.length %> KiÅŸi</p>
            <!-- TODO(Yigit): Toplam destekleyen kisi sayisi goruntulensin. -->


            <% @organization.supports.order("score DESC").each do |s|%>
              <div class="supporter clearfix">
                <div class="s-photo">
                  <%= image_tag s.user.photo.url(:thumb) %>
                </div>
                <div class="s-name">
                  <%=link_to s.user.name, s.user%> (<%=s.score%>)
                </div>
              </div>
            <% end %>
          <% else %>
            <p>Ä°lk destekleyen sen ol!</p>
          <% end %>
        </div>
      </div><!-- .w-content -->
  </div>
<% end %>
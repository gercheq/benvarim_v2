<% if BvFeature.is_support_enabled? %>
  <div class="w-supporters">

    <% if not @support %>
        <%=link_to "Beğen", new_support_path(@organization), :class => "button green large button-destekle"%>
    <% end %>

    <div class="w-content">
      <div class="supporters">
        <% if @organization.supports.length != 0 %>
          <p><strong>Beğenenler:</strong> <%= @organization.supports.length %> Kişi</p>


          <% @organization.supports.order("score DESC").each do |s|%>
            <div class="supporter clearfix">
              <div class="s-photo">
                <%= image_tag s.user.photo.url(:thumb) %>
              </div>
              <div class="s-name">
                <%=link_to s.user.name, s.user%> <span class="hidden">(<%=s.score%>)</span>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>İlk beğenen sen ol!</p>
        <% end %>
      </div>
    </div><!-- .w-content -->


    <% if @support %>
    <div class="more-support">
      <%=link_to "+ Daha fazla destek topla", "javascript:openSupportDialog();", :class => ""%>
    </div>
    <% end %>

  </div>
<% end %>